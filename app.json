{
  "expo": {
    "name": "Stryde",
    "slug": "Stryde",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "stryde",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Stryde needs access to your location to track your route and calculate distance during activities.",
        "NSMotionUsageDescription": "Stryde uses your motion data to count steps and track your activity."
      },
      "bundleIdentifier": "com.anonymous.Stryde"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#102218",
        "foregroundImage": "./assets/images/icon.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACTIVITY_RECOGNITION"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.anonymous.Stryde"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#102218",
          "dark": {
            "backgroundColor": "#102218"
          }
        }
      ],
      "expo-sqlite",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Stryde needs access to your location to track your route and calculate distance during activities.",
          "locationWhenInUsePermission": "Stryde needs access to your location to track your route and calculate distance during activities."
        }
      ],
      [
        "expo-sensors",
        {
          "motionPermission": "Stryde uses your motion data to count steps and track your activity."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "54a61828-81fe-4c34-8b7b-ef468d6a4639"
      }
    }
  }
}
